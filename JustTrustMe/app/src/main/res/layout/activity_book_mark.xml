<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_BM"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookMarkActi">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="북마크 페이지입니다."
        android:textColor="@android:color/white"
        android:layout_marginTop="60dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:background="#E0B650"
            android:foregroundGravity="top"
            android:gravity="top">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/book_mark"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>
        <Button
            android:id="@+id/btn_bookmark_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"/>
        <ListView
            android:id="@+id/listView"
            android:divider="#38af4c"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/nav_bottom_main">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>